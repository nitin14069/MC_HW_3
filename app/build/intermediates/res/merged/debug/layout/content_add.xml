<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#d7e023">






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Comapany Name : "
            android:id="@+id/CompanyName"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/CompanyNameEnter"
            android:layout_gravity="right" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Company Domain : "
            android:id="@+id/CompanyDomain"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/CompanyDomainEnter"
            android:layout_gravity="right" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:text="Amount  : "
            android:id="@+id/Amount"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/AmountEnter"
            android:layout_gravity="right" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp31"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp32"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="@string/AddItem"
        android:id="@+id/AddItem"
        android:layout_weight="0.10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="@string/UpdateItem"
        android:id="@+id/UpdateItem"
        android:layout_weight="0.10" />

</LinearLayout>
